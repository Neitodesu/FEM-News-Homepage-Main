---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Navbar from '../components/Navbar.svelte';
import MainSection from '../components/MainSection.astro';
---

<Layout title="Welcome to Astro.">
	<main class="main-grid-container">
		<Navbar client:load/>
		<MainSection />
		<div class="grid-container">
			<Card id='01'
			title='Retro PCs'
			body='Where tf did they go?'/>
			<Card id='02'
			title='Modern PCs'
			body='Why is my graphics card worth more than a house?'/>
			<Card id='03'
			title='Future PCs'
			body='You still use graphics cards?'/>
		</div>
	</main>
</Layout>

<style lang="scss">
	main{
		padding: 1em;
		min-height: 100vh;
		margin: 0 auto;

		@media screen and (min-width: 800px) {
			max-width: 1140px;
		}
	}
	.grid-container{
		background-color: #2d2d2d;
		color: #fff;
		padding: 1em;
		margin: 0 auto;
		display: grid;
		grid-template-rows: 1fr 1fr 1fr;
		text-align: center;

		@media screen and (min-width: 800px) {
			grid-template-columns: 1fr 1fr 1fr;
			grid-template-rows: none;
			text-align: left;
		}
	}
</style>
